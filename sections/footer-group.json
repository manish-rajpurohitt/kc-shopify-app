{"name":"t:sections.footer.name","type":"footer","sections":{"custom_liquid_XATeUB":{"type":"custom-liquid","name":"t:sections.custom-liquid.presets.name","settings":{"custom_liquid":"<div class=\"custom-footer\">\n  {% assign sections = \n    \"Quick Links:\/collections\/all:All Products,\/collections\/best-sellers:Best Sellers,\/collections\/shop-by-style:Shop By Style;\n     Collections:\/collections\/shop-by-style:Shop By Style;\n     Company:\/pages\/about-us:About Us;\n     Policies:\/pages\/terms-and-conditions:Terms & Conditions,\/pages\/returns-and-refunds:Returns & Refunds,\/pages\/safety-and-security:Safety & Security,\/pages\/shipping-policy:Shipping Policy;\n     Support & Help:\/pages\/contact-us:Contact Us;\n     Payments::\" | split: \";\" %}\n\n  {% for section in sections %}\n    {% assign pair = section | split: \":\" %}\n    <div class=\"accordion-section\">\n      <button class=\"accordion-title\" onclick=\"toggleAccordion(this)\">\n        <span class=\"title-text\">{{ pair[0] }}<\/span>\n        <span class=\"toggle-icon\">+<\/span>\n      <\/button>\n      <ul class=\"accordion-content\">\n        {% if pair[0] == \"Payments\" %}\n          <li>\n            <div class=\"payment-icons\">\n              {{ content_for_footer | split: '<!-- payment-icons-start -->' | last | split: '<!-- payment-icons-end -->' | first }}\n            <\/div>\n          <\/li>\n        {% else %}\n          {% assign links = section | remove_first: pair[0] | remove_first: \":\" | split: \",\" %}\n          {% for link in links %}\n            {% assign link_parts = link | split: \":\" %}\n            <li><a href=\"{{ link_parts[0] }}\">{{ link_parts[1] }}<\/a><\/li>\n          {% endfor %}\n        {% endif %}\n      <\/ul>\n    <\/div>\n  {% endfor %}\n<\/div>\n\n<script>\n  function toggleAccordion(button) {\n    const allSections = document.querySelectorAll('.accordion-section');\n    allSections.forEach(section => {\n      const content = section.querySelector('.accordion-content');\n      const icon = section.querySelector('.toggle-icon');\n      const isThis = section.contains(button);\n      \n      if (isThis) {\n        const isOpen = content.classList.contains('active');\n        if (isOpen) {\n          content.classList.remove('active');\n          content.style.maxHeight = null;\n          icon.textContent = '+';\n        } else {\n          content.classList.add('active');\n          content.style.maxHeight = content.scrollHeight + 'px';\n          icon.textContent = 'â€“';\n        }\n      } else {\n        content.classList.remove('active');\n        content.style.maxHeight = null;\n        icon.textContent = '+';\n      }\n    });\n  }\n<\/script>\n\n<style>\n.custom-footer {\n  background: #111;\n  color: #fff;\n  padding: 1rem;\n  font-family: sans-serif;\n}\n\n.accordion-section {\n  margin-bottom: 0.5rem;\n  position: relative; \/* Important for stacking *\/\n  z-index: 1;\n}\n\n.accordion-title {\n  width: 100%;\n  background: none;\n  border: none;\n  color: inherit;\n  font-weight: bold;\n  font-size: 1rem;\n  cursor: pointer;\n  padding: 0.75rem 0;\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n}\n\n.accordion-content {\n  max-height: 0;\n  overflow: hidden;\n  transition: max-height 0.4s ease;\n  list-style: none;\n  padding: 0 0 0 1rem;\n  margin: 0;\n  box-sizing: border-box;\n  background-color: #111;\n  z-index: 0;\n}\n\n.accordion-content li {\n  margin: 0.5rem 0;\n}\n\n.accordion-content a {\n  color: #ccc;\n  text-decoration: none;\n  font-size: 0.95rem;\n}\n\n.accordion-content a:hover {\n  color: #fff;\n}\n\n.toggle-icon {\n  font-size: 1.2rem;\n  font-weight: bold;\n  margin-left: 0.5rem;\n}\n\n.payment-icons {\n  margin-top: 0.5rem;\n  padding-left: 1rem;\n}\n\n<\/style>","color_scheme":"scheme-4","padding_top":40,"padding_bottom":52}},"footer":{"type":"footer","custom_css":[],"settings":{"color_scheme":"scheme-4","newsletter_enable":false,"newsletter_heading":"Subscribe to our emails","enable_follow_on_shop":false,"show_social":true,"enable_country_selector":false,"enable_language_selector":false,"payment_enable":true,"show_policy":true,"margin_top":0,"padding_top":36,"padding_bottom":36}}},"order":["custom_liquid_XATeUB","footer"]}